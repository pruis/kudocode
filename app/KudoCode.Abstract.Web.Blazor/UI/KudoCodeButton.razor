@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

@namespace KudoCode.Abstract.Web.Blazor

@inherits KudoCode.Abstract.Web.Blazor.KudoCodeUiComponent

<input type="button"
	   style="width: 100%"
	   class="btn @(string.IsNullOrWhiteSpace(Class) ? "btn btn-primary" : Class)"
	   value=@Value
	   id="@Id"
	   disabled=@Disabled
	   @onclick="@OnClick" />


@functions
{

	[Parameter]
	public bool Disabled { get; set; } = false;

	[Parameter]
	public string Value { get; set; }

	[Parameter]
	public string Class { get; set; }

	[Parameter]
	public EventCallback<object> Click { get; set; }

	void OnClick(object args)
	{
		Click.InvokeAsync(args).Wait();
	}

}