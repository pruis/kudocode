<!-- The Modal -->
<div class="modal" id="leadScheduledActivityModal">

	<div class="modal-dialog modal-lg">
		<div class="modal-content">

			<!-- Modal Header -->
			<div class="modal-header">
				<h4 class="modal-title">Activity</h4>
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>

			<!-- Modal body -->
			<div class="modal-body">

				<div data-bind="template: { name: 'person-template', data: Result.SelectedLeadScheduledActivity }"></div>
			</div>

			<!-- Modal footer -->
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
			</div>

		</div>
	</div>
</div>

<script type="text/html" id="person-template">

	<div class="row">
		<div class="col-lg-10 display-5 testBorder">
			Address
		</div>
	</div>

	<div class="row">
		<div class="col-lg-4">
			<label>Complex:</label>
		</div>
		<div class="col-lg-6">
			<input class="form-control" data-bind="value: Address.Complex" type="text" />
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<label>Street:</label>
		</div>
		<div class="col-lg-6">
			<input class="form-control" data-bind="value: Address.Street" type="text" />
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<label>Suburb:</label>
		</div>
		<div class="col-lg-6">
			<input class="form-control" data-bind="value: Address.Suburb" type="text" />
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<label>City:</label>
		</div>
		<div class="col-lg-6">
			<input class="form-control" data-bind="value: Address.City" type="text" />
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<label>Code:</label>
		</div>
		<div class="col-lg-6">
			<input class="form-control" data-bind="value: Address.Code" type="text" />
		</div>
	</div>

	<hr />
	<div class="row">
		<div class="col-lg-10 display-5 testBorder">
			Appointment
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4 ">
			<label>Appointment Date:</label>
		</div>
		<div class="col-lg-6">
			<input id="AppointmentDateTime" class="form-control" date-autoclose="true" data-bind=" event:{ valueUpdate: 'input'},  dateTimePicker: AppointmentDateTime , value: AppointmentDateTime" />
		</div>
	</div>

	<div class="row">
		<div class="col-lg-4">
			<label>Occupation:</label>
		</div>
		<div class="col-lg-6">
			<select class="form-control" data-bind="options: $root.Result.LeadScheduledActivityTypes,
                       optionsText: 'Description',
					   optionsValue: 'Key',
                       value:  $root.Result.SelectedLeadScheduledActivity.LeadScheduledActivityType,
                       optionsCaption: 'Choose...'"></select>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-4">
			<label>Notes:</label>
		</div>
		<div class="col-lg-6">
			<input class="form-control" data-bind="value: Notes" type="text" />
		</div>
	</div>

</script>


<script type="text/javascript">
	GetLeadScheduledActivityData = function (data) {

		viewModel.Result.SelectedLeadScheduledActivity = data;
		var element = $("#leadScheduledActivityModal")[0];
		//koClearNode(element);
		ko.cleanNode(element);
		ko.applyBindings(viewModel, element);

		$('#leadScheduledActivityModal').modal('show');
	}
</script>


